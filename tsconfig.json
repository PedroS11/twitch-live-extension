{
  "compilerOptions": {
    "jsx": "react",
    "module": "es2022",
    "target": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
